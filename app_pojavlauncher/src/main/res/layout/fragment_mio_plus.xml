<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_menu_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_app"
    android:gravity="top"
    android:orientation="vertical">

    <com.kdt.mcgui.LauncherMenuButton
        android:id="@+id/change_download_source_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_66sdp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@drawable/ic_menu_news"
        android:text="切换下载源(当前为官方源)"
        app:layout_constraintTop_toTopOf="parent" />

    <com.kdt.mcgui.LauncherMenuButton
        android:id="@+id/download_forge_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_66sdp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@drawable/forge"
        android:text="下载forge"
        app:layout_constraintTop_toBottomOf="@id/change_download_source_button" />

    <com.kdt.mcgui.LauncherMenuButton
        android:id="@+id/download_fabric_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_66sdp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@drawable/fabric"
        android:text="下载fabric"
        app:layout_constraintTop_toBottomOf="@id/download_forge_button" />

    <com.kdt.mcgui.LauncherMenuButton
        android:id="@+id/download_optfine_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_66sdp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@drawable/optfine"
        android:text="下载高清修复"
        app:layout_constraintTop_toBottomOf="@id/download_fabric_button" />

    <com.kdt.mcgui.LauncherMenuButton
        android:id="@+id/custom_dir_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_66sdp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@drawable/ic_creation"
        android:text="版本隔离"
        app:layout_constraintTop_toBottomOf="@id/download_optfine_button" />

    <com.kdt.mcgui.LauncherMenuButton
        android:id="@+id/mod_manage_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_66sdp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@drawable/ic_settings"
        android:text="MOD管理"
        app:layout_constraintTop_toBottomOf="@id/custom_dir_button" />

    <com.kdt.mcgui.LauncherMenuButton
        android:id="@+id/mod_download_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_66sdp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@drawable/ic_mod"
        android:text="MOD下载"
        app:layout_constraintTop_toBottomOf="@id/mod_manage_button" />

</androidx.constraintlayout.widget.ConstraintLayout>

